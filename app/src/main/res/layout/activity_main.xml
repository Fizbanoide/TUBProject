<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="Carte"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="60dp"
        android:layout_marginTop="73dp"
        android:id="@+id/tvCarte" />

    <Button
        android:text="Carte"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvCarte"
        android:layout_alignParentStart="true"
        android:layout_marginStart="45dp"
        android:layout_marginTop="22dp"
        android:id="@+id/btCarte" />

    <Button
        android:text="Recherche"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btCarte"
        android:layout_toEndOf="@+id/btCarte"
        android:layout_marginStart="70dp"
        android:id="@+id/btRecherche" />

    <TextView
        android:text="Recherche"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvRecherche"
        android:layout_above="@+id/btCarte"
        android:layout_alignStart="@+id/btRecherche"
        android:layout_marginStart="12dp" />
</RelativeLayout>